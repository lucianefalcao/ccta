<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/horizontalCardLayout"
    android:layout_width="265sp"
    android:layout_height="265sp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="32dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:contentDescription="imagem noticia"
        android:id="@+id/horizontalCardImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@drawable/horizontal_image_shape"
        android:src="@drawable/benef"


        />


    <ImageView
        android:id="@+id/horizontalCardFade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="fade"
        android:src="@drawable/horizontal_news_fade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/favoriteButton"
        android:layout_width="17.17dp"
        android:layout_height="18dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="21dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/heart_icon"
        android:contentDescription="favoritar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontalCardImage" />

    <TextView
        android:id="@+id/horizontalCardTitle"
        android:layout_width="181sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="24dp"
        android:gravity="bottom"
        android:text="UFPB desenvolve teste de Covid-19 mais simples e barato"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/horizontalCardImage"
        app:layout_constraintStart_toStartOf="@+id/horizontalCardImage" />
</androidx.constraintlayout.widget.ConstraintLayout>