<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp">


    <ImageView
        android:id="@+id/imageVerticalNews"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:adjustViewBounds="true"
        android:background="@drawable/vertical_image_shape"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:flow_verticalAlign="center"
        app:srcCompat="@drawable/vertical_default_image" />

    <TextView
        android:id="@+id/themeVerticalNews"
        android:layout_width="138dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/imageVerticalNews"
        android:gravity="top"
        android:text="Ciência"
        android:textColor="#FE4E5A"
        android:textSize="12sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/imageVerticalNews"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleVerticalNews"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/themeVerticalNews"
        android:layout_toEndOf="@+id/imageVerticalNews"
        android:gravity="top"
        android:text="Projeto da UFPB firma parceria com Centro de Zoonoses"
        android:textColor="#1E2022"
        android:textSize="13sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/imageVerticalNews"
        app:layout_constraintTop_toBottomOf="@+id/themeVerticalNews" />

    <TextView
        android:id="@+id/dateVerticalNews"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleVerticalNews"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/imageVerticalNews"
        android:gravity="top"
        android:text="Qui., 02 de Setembro de 2021"
        android:textColor="#9D9D9D"
        android:textSize="9sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/imageVerticalNews"
        app:layout_constraintTop_toBottomOf="@+id/titleVerticalNews" />

    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="#00FFFFFF"
        android:contentDescription="botão de compartilhar"
        app:tint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titleVerticalNews"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeShareDrawable" />
</androidx.constraintlayout.widget.ConstraintLayout>